<div class = 'container'>
	<h2>Projects</h2>
	<%=  link_to "Create New Project", new_project_path%>
	<table class = 'table'>
		<thead>
	    <tr>
	    	<th>Name</th>
	    	<th>Description</th>
	      <th>Due Date(Mountain Time)</th>
	      <th>Creator</th>
	      <th>Time left</th>
	      <th>Priority</th>
	      <th></th>
	    </tr>
	  </thead>
	  <tbody>
		  <% @projects.each do |project| %>
			  <tr>
				  <td><%= project.name %></td>
				  <td><%= project.description %></td>
				  <td><%= project.due_date.strftime("%B %d, %Y, %I:%M %P") %></td>
				  <td><%= project.user.first_name %> <%= project.user.last_name %></td>
				  <% if project.complete == true %>
				 		<td><%= "Completed!" %></td>
				 	<% else %>	
				  	<td><%= distance_of_time_in_words_to_now(project.due_date) %></td>
				  <% end %> 
				  <td><%= project.priority %></td>
				  <td>
				  	<div class="btn-group btn-group-xs">
							<%= link_to 'View', project_path(project), class: "btn" %>
							<%= link_to 'Edit', edit_project_path(project), class: "btn" %>
							<%= link_to 'Delete', project, data: { confirm: "Are you sure you wish to delete this project?" }, 
																						 method: :delete, class: "btn" %>
						</div>
						<span><%= form_for project do |f| %>
              <%= f.check_box :complete %>
              <%= f.label :complete %>
              <%= f.select :priority, Project.priorities.keys.map { |s| [s.humanize, s] }, class: "form-control" %>
              <%= f.submit %>  
              <% end %>             															 
						</span>	
					</td>
				</tr>
			<% end %>
	  </tbody>
	</table>
</div>
